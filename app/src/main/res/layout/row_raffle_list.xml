<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorPrimary">

        <com.lid.lib.LabelImageView
            android:id="@+id/img_cell_cover"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            app:label_orientation="LEFT_TOP"
            app:label_text="R25"
            app:label_backgroundColor="#C2185B" />

        <TextView
            android:id="@+id/txt_cell_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/img_cell_cover"
            android:layout_toEndOf="@+id/img_cell_cover"/>
        <TextView
            android:id="@+id/txt_cell_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="This is description."
            android:textSize="15sp"
            android:textColor="@color/colorAccent"
            android:layout_toRightOf="@+id/img_cell_cover"
            android:layout_toEndOf="@+id/img_cell_cover"
            android:layout_above="@+id/txt_cell_timer"
            android:layout_below="@+id/txt_cell_title" />

        <!--<com.raffler.app.widgets.CustomTextView
            android:id="@+id/txt_cell_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="02:05:12 remaining"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="16sp"
            app:outerShadowRadius="1px"
            app:strokeColor="@color/colorWhite"
            app:strokeJoinStyle="miter"
            app:strokeWidth="1px"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/img_cell_cover"
            android:layout_toEndOf="@+id/img_cell_cover" />-->

        <TextView
            android:id="@+id/txt_cell_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="02:05:12 remaining"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/img_cell_cover"
            android:layout_toEndOf="@+id/img_cell_cover" />

        <ImageView
            android:id="@+id/img_cell_marker"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_raffle_winner"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</RelativeLayout>
